<?xml version='1.0' encoding='utf-8'?>
<widget id="com.gmail.thepiercingarrow.freemusic" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>FreeMusic</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="thepiercingarrow@gmail.com" href="http://thepiercingarrow.github.io">
        Maxwell Zhao
    </author>
    <icon src="icon.png" />
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="ios" spec="~4.2.1" />
    <plugin name="cordova-plugin-file" spec="~4.3.0" />
    <plugin name="cordova-plugin-file-transfer" spec="~1.6.0" />
    <plugin name="cordova-plugin-media" spec="~2.4.0" />
    <plugin name="cordova-plugin-splashscreen" spec="~4.0.0" />
    
    <platform name="android">
        <splash src="splashscreen.png" />
    </platform>
    <platform name="ios">
        <splash src="splashscreen.png" width="320" height="480" />
	<splash src="splashscreen.png" width="640" height="960" />
	<splash src="splashscreen.png" width="768" height="1024" />
	<splash src="splashscreen.png" width="1536" height="2048" />
	<splash src="splashscreen.png" width="640" height="1136" />
	<splash src="splashscreen.png" width="750" height="1334" />
	<splash src="splashscreen.png" width="1242" height="2208" />
    </platform>
    <preference name="AutoHideSplashScreen" value="true" />
    <preference name="SplashScreenDelay" value="3000" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="SplashShowOnlyFirstTime" value="true" />
</widget>
