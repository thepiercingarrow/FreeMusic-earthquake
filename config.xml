<?xml version='1.0' encoding='utf-8'?>
<widget id="com.gmail.thepiercingarrow.freemusic" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>FreeMusic</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="thepiercingarrow@gmail.com" href="http://thepiercingarrow.github.io">
        Maxwell Zhao
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="ios" spec="~4.2.1" />
    <plugin name="cordova-plugin-file" spec="~4.3.0" />
</widget>
