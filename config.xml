<?xml version='1.0' encoding='utf-8'?>
<widget id="com.gmail.thepiercingarrow.freemusic" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>FreeMusic</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="thepiercingarrow@gmail.com" href="http://thepiercingarrow.github.io">
        Maxwell Zhao
    </author>
    <icon src="icon.png" />
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-file" spec="~4.3.0" />
    <plugin name="cordova-plugin-file-transfer" spec="~1.6.0" />
    <plugin name="cordova-plugin-media" spec="~2.4.0" />
    <plugin name="cordova-plugin-splashscreen" spec="~4.0.0" />
    <platform name="ios">
        <!-- iOS 8.0+ -->
        <!-- iPhone 6 Plus  -->
        <icon src="icons/icon180.png" width="180" height="180" />
        <!-- iOS 7.0+ -->
        <!-- iPhone / iPod Touch  -->
        <icon src="icons/icon60.png" width="60" height="60" />
        <icon src="icons/icon120.png" width="120" height="120" />
        <!-- iPad -->
        <icon src="icons/icon76.png" width="76" height="76" />
        <icon src="icons/icon152.png" width="152" height="152" />
        <!-- iOS 6.1 -->
        <!-- Spotlight Icon -->
        <icon src="icons/icon40.png" width="40" height="40" />
        <icon src="icons/icon80.png" width="80" height="80" />
        <!-- iPhone / iPod Touch -->
        <icon src="icons/icon57.png" width="57" height="57" />
        <icon src="icons/icon114.png" width="114" height="114" />
        <!-- iPad -->
        <icon src="icons/icon72.png" width="72" height="72" />
        <icon src="icons/icon144.png" width="144" height="144" />
        <!-- iPhone Spotlight and Settings Icon -->
        <icon src="icons/icon29.png" width="29" height="29" />
        <icon src="icons/icon58.png" width="58" height="58" />
        <!-- iPad Spotlight and Settings Icon -->
        <icon src="icons/icon50.png" width="50" height="50" />
        <icon src="icons/icon100.png" width="100" height="100" />
    </platform>
    <platform name="android">
        <splash src="splashscreen.png" />
    </platform>
    <platform name="ios">
        <splash height="480" src="splashscreens/splashscreen320x480.png" width="320" />
        <splash height="960" src="splashscreens/splashscreen640x960.png" width="640" />
        <splash height="1024" src="splashscreens/splashscreen768x1024.png" width="768" />
        <splash height="2048" src="splashscreens/splashscreen1536x2048.png" width="1536" />
        <splash height="1136" src="splashscreens/splashscreen640x1136.png" width="640" />
        <splash height="1334" src="splashscreens/splashscreen750x1334.png" width="750" />
        <splash height="2208" src="splashscreens/splashscreen1242x2208.png" width="1242" />
    </platform>
    <hook type="before_build" src="scripts/copy-icons.sh" />
    <hook type="before_build" src="scripts/copy-splashscreens.sh" />
    <preference name="AutoHideSplashScreen" value="true" />
    <preference name="SplashScreenDelay" value="3000" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="SplashShowOnlyFirstTime" value="true" />
</widget>
